{
    "manifest_version": 3,
    "name": "AstraLock",
    "version": "1.0",
    "description": "Protect WhatsApp Web with FaceID or Password",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": [
      "https://web.whatsapp.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  
